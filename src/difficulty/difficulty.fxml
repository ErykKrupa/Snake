    <Label layoutX="193.0" layoutY="50.0" text="Enter your name:">
        <font>
            <Font name="Monotype Corsiva" size="25.0" />
        </font>
    </Label>
    <TextField fx:id="nameTextField" layoutX="161.0" layoutY="102.0" prefHeight="20.0" prefWidth="218.0">
        <font>
            <Font name="Monotype Corsiva" size="20.0" />
        </font>
    </TextField>
