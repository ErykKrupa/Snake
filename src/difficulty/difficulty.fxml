    <Button layoutX="383.0" layoutY="254.0" onAction="#hardClick" prefHeight="43.0" prefWidth="107.0" text="Hard">
        <font>
            <Font name="Monotype Corsiva" size="20.0" />
        </font>
    </Button>
    <Button layoutX="239.0" layoutY="370.0" onAction="#menu" prefHeight="35.0" prefWidth="63.0" text="Menu">
        <font>
            <Font name="Monotype Corsiva" size="18.0" />
